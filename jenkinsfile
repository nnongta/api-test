pipeline {
    agent {
        label 'master'
    }
    environment {
        REGISTRY = "ghcr.io/nnongta"
        IMAGE_NAME = "simple-api"
        IMAGE_TAG = "latest"
    }
    stages {
        stage('Clone Repo') {
            agent { label 'vm2' }
            steps {
                git branch: 'main', url: 'https://github.com/nnongta/api-test.git'
            }
        }
        stage('Run Unit Tests') {
            agent { label 'vm2' }
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install -r requirement.txt
                '''
            }
        }
        stage('Build Docker Image') {
            agent { label 'vm2' }
            steps {
                sh 'docker build -t $REGISTRY/$IMAGE_NAME:$IMAGE_TAG .'
            }
        }
        stage('Push to Registry') {
            agent { label 'vm2' }
            steps {
                withDockerRegistry([credentialsId: 'thanita', url: "https://ghcr.io"]) {
                    sh 'docker push $REGISTRY/$IMAGE_NAME:$IMAGE_TAG'
                }
            }
        }
        stage('Deploy to VM2') {
            agent { label 'vm2' }
            steps {
                sh '''
                docker pull $REGISTRY/$IMAGE_NAME:$IMAGE_TAG
                docker run -d -p 5000:5000 $REGISTRY/$IMAGE_NAME:$IMAGE_TAG
                '''
            }
        }
        stage('Run Robot Tests on VM2') {
            agent { label 'vm2' }
            steps {
                sh '''
                git clone https://github.com/yourusername/robot-tests.git
                cd robot-tests
                robot test_plus.robot
                '''
            }
        }
        stage('Deploy to VM3 (Pre-Prod)') {
            agent { label 'vm3' }
            steps {
                sh '''
                docker pull $REGISTRY/$IMAGE_NAME:$IMAGE_TAG
                docker run -d -p 5000:5000 $REGISTRY/$IMAGE_NAME:$IMAGE_TAG
                '''
            }
        }
    }
}
